<h1>Welcome to <%= @room.name %></h1>
<div class="container">
  <div id="messages">
  <% @messages.each do |message| %>
  <%= render 'message', message: message %>
  <%end%>
</div>

  <%= form_for [@room, Message.new], remote:true do |f| %>
  <div class="form-group row">
    <%= f.label 'Content'  %>
    <%= f.text_field :content %>
  </div>
  <div class="form-group row">
    <%= f.submit "send"%>
  </div>

  <%end%>

